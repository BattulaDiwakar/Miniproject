                       int ch=sc1.nextInt();
     switch(ch)
                      {
                          case 1: System.out.println("✌️ UPI");
                                if(balance>1000)
                                {
                                 double tax=balance*(0.9);
                                 total=balance+tax;
                                }else
                                total=balance+40;
                               
                                  
                                  break;
                         case 2:System.out.println("👌CREDIT / DEBIT /ATM CARD"); 
                                if(balance>1000){
                                 double tax=balance*(0.3);
                                 total=balance+tax;
                                }else
                                total=balance+40;
                                  break;
                        case 3:System.out.println(" 🤩NET BANKING");
                               if(balance>1000){
                                 double tax=balance*(0.4);
                                 total=balance+tax;
                                }else
                                total=balance+40;
                                  break;
                      case 4:System.out.println("CASH ON DELIVERY"); 
                              if(balance>1000){
                                 double tax=balance*(0.1);
                                 total=balance+tax;
                                }else
                                total=balance+40;
                                  break;
                      }
 
}


